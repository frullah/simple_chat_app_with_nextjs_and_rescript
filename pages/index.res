@module external styles: {..} = "../styles/Home.module.css"

// copied from https://github.com/MoOx/rescript-next/blob/main/src/Next.res
// TODO: find another way than doing this
module Head = {
  @module("next/head") @react.component
  external make: (~children: React.element) => React.element = "default"
}

// copied from https://github.com/MoOx/rescript-next/blob/main/src/Next.res
// TODO: find another way than doing this
module Link = {
  @module("next/link") @react.component
  external make: (
    ~_as: string=?,
    ~children: React.element,
    ~className: option<string>=?,
    ~href: string,
    ~passHref: option<bool>=?,
    ~prefetch: bool=?,
    ~replace: option<bool>=?,
    ~shallow: option<bool>=?,
  ) => React.element = "default"
}

// https://nextjs.org/docs/api-reference/next/image
// copied from https://github.com/MoOx/rescript-next/blob/main/src/Next.res
// TODO: find another way than doing this
module Image = {
  type loaderOptions = {
    src: string,
    width: float,
    quality: float,
  }
  @module("next/image") @react.component
  external make: (
    ~alt: string=?,
    ~className: string=?,
    ~height: float=?,
    ~layout: [#fixed | #intrinsic | #responsive | #fill]=?,
    ~loader: loaderOptions => string=?,
    ~loading: [
      | #"lazy"
      | #eager
    ]=?,
    ~priority: bool=?,
    ~objectFit: [
      | #fill
      | #contain
      | #cover
      | #none
      | #"scale-down"
    ]=?,
    ~objectPosition: string=?,
    ~quality: float=?,
    ~sizes: string=?,
    ~src: string,
    ~unoptimized: bool=?,
    ~width: float=?,
  ) => React.element = "default"
}

let default = () => {
  <div className={styles["container"]}>
    <Head>
      <title> {React.string("Create Next App")} </title>
      <meta name="description" content="Generated by create next app" />
      <link rel="icon" href="/favicon.ico" />
    </Head>

      <main className={styles["main"]}>
        <h1>
          {React.string("Hello World")}
        </h1>
      </main>

      <footer className={styles["footer"]}>
        <a
          href="https://vercel.com?utm_source=create-next-app&utm_medium=default-template&utm_campaign=create-next-app"
          target="_blank"
          rel="noopener noreferrer"
        >
          {React.string("Powered by ")}
          <span className={styles["logo"]}>
            <Image src="/vercel.svg" alt="Vercel Logo" width={72.0} height={16.0} />
          </span>
        </a>
      </footer>
  </div>
}
